<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Profile Header -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- (Skip image for now) -->
        <!-- User Name -->
        <TextView
            android:id="@+id/textProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textProfileSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#8E24AA"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="32dp"/>

        <!-- Info Rows -->

        <!-- Row Template -->
        <!-- Repeat this block for Name, Email, Location, Skills -->

        <!-- Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Left side: Labels -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Right side: Icon box -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FBE7A5"
                android:layout_marginStart="12dp"
                android:backgroundTint="#FBE7A5" />

        </LinearLayout>

        <!-- Email Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#EEF4F1"
                android:layout_marginStart="12dp"
                android:backgroundTint="#EEF4F1" />
        </LinearLayout>

        <!-- Location Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#37474F"
                android:layout_marginStart="12dp"
                android:backgroundTint="#37474F" />
        </LinearLayout>

        <!-- Skills Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#2C3E50"
                android:layout_marginStart="12dp"
                android:backgroundTint="#2C3E50" />
        </LinearLayout>
<!--Skill Requested-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills Requested"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textSkillRequested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#EEF4F1"
                android:layout_marginStart="12dp"
                android:backgroundTint="#EEF4F1" />
        </LinearLayout>
<!--Skill Offered-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills Offered"
                    android:textSize="14sp"
                    android:textColor="#8E24AA"/>

                <TextView
                    android:id="@+id/textSkillOffered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#EEF4F1"
                android:layout_marginStart="12dp"
                android:backgroundTint="#EEF4F1" />
        </LinearLayout>


<!--        Request Swap Skills Button-->
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Swap Skills"
            android:id="@+id/learnrequestedskill"
            />
    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_rounded"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:elevation="4dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/etSearchBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search courses or skills..."
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:paddingVertical="8dp"
                    android:completionThreshold="1" />

                <ImageView
                    android:id="@+id/ivSearchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search" />
            </LinearLayout>

            <!-- Language Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/layoutLanguageFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Category Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/layoutCategoryFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Featured Course Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Course"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Featured Course ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerFeatured"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/featuredCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mastering UI/UX Design"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/featuredCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn the fundamentals of UI/UX design and create stunning interfaces."
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/featuredCourseDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <!-- Challenges Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Challenges"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- XP Challenge Card -->
            <LinearLayout
                android:id="@+id/xpChallengeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/streakTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/xpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily XP Challenge"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/xpSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete 3 lessons to earn +50 XP!"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/xpProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:progress="0"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_xp"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/xpStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3 lessons completed"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Daily Quiz Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDailyQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_quiz"
                        android:contentDescription="Quiz Icon"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Quiz Challenge"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Answer a quiz from your course and earn XP!"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Leaderboard Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_trophy"
                android:drawablePadding="8dp"
                android:text="Leaderboard"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Leaderboard Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerLeaderboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recommended Courses Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Courses"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Recommended Courses Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Buttons outside scroll so they float -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message"
        app:tint="@android:color/white"
        app:backgroundTint="@color/black"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bot"
        app:tint="@android:color/white"
        app:backgroundTint="@color/black"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

            <!-- âœ… Featured Course -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Course"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerFeatured"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:overScrollMode="never"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/featuredCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mastering UI/UX Design"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/featuredCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn the fundamentals of UI/UX design and create stunning interfaces."
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/featuredCourseDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />
            <!-- âœ… XP Challenge Card -->
            <LinearLayout
                android:id="@+id/xpChallengeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">
                <TextView
                    android:id="@+id/streakTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Streak: 0 days"
                    android:textSize="16sp"
                    android:textColor="#FF5722"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:id="@+id/xpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily XP Challenge"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/xpSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete 3 lessons to earn +50 XP!"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/xpProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:progress="0"
                    android:max="3"
                    android:progressDrawable="@drawable/progress_bar_xp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/xpStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3 lessons completed"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

            </LinearLayout>
            <!-- âœ… Daily Quiz Challenge Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDailyQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Quiz Challenge"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer a quiz from your course and earn XP!"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- âœ… Recommended Courses -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Courses"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- âœ… Floating messages FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message"
        android:contentDescription="Messages"
        app:tint="@android:color/white"
        app:backgroundTint="@color/black"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp" />


    <!-- âœ… Floating bot FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bot"
        android:contentDescription="Chat Bot"
        app:tint="@android:color/white"
        app:backgroundTint="@color/black"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        />

</FrameLayout>

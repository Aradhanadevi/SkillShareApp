<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet Our Developers"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            android:paddingBottom="20dp" />
        <!-- Developer 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_dev2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/aradhanaimg"
                android:contentDescription="Developer 2"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_dev2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aradhanadevi Jadeja"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Android Developer"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/email_dev2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aradhanajadeja81@gmail.com"
                    android:textColor="#0748DB"
                    android:textStyle="normal"
                    android:autoLink="email"
                    android:linksClickable="true"
                    android:textSize="14sp"
                     />
            </LinearLayout>
        </LinearLayout>
        <!-- Developer 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_dev1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/anjaliimg"
                android:contentDescription="Developer 1"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_dev1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anjali Valani"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Android Developer"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/email_dev1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anjalivalani728@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#0748DB"
                    android:textStyle="normal"
                    android:autoLink="email"
                    android:linksClickable="true"/>
            </LinearLayout>
        </LinearLayout>



        <!-- Guide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_guide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/jigarsitimg"
                android:contentDescription="Guide"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Jigar Dave"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Project Guide"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/email_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jigar.dave@marwadieducation.edu.in"
                    android:textSize="14sp"
                    android:textColor="#0748DB"
                    android:textStyle="normal"
                    android:autoLink="email"
                    android:linksClickable="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

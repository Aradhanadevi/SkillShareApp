<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Splashscreen">

    <!-- Center big logo -->
    <ImageView
        android:id="@+id/logo_center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logowithoudots"
        android:layout_gravity="center"
        android:contentDescription="App Logo" />

    <!-- Orbit 1 (small, close) -->
    <FrameLayout
        android:id="@+id/orbit_small"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/dot_shape_red" />
    </FrameLayout>

    <!-- Orbit 2 (medium) -->
    <FrameLayout
        android:id="@+id/orbit_medium"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/dot_shape_blue" />
    </FrameLayout>

    <!-- Orbit 3 (large, reverse direction) -->
    <FrameLayout
        android:id="@+id/orbit_large"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/dot_shape_green" />
    </FrameLayout>

</FrameLayout>
